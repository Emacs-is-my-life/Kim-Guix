# Don't ask me for debuginfod
set debuginfod enabled off

# Aesthetics
set style enabled on
set style sources on
set print pretty on
set print array-indexes on

# QoL
set pagination off
set history save on
set history size 10000
set history filename ~/.gdb_history

# Intel syntax
set disassembly-flavor intel

# Load GEF for Terminal
python
import os
import gdb

in_emacs = os.getenv("INSIDE_EMACS")
if not in_emacs:
    gdb.execute("source ~/.config/gdb/gef.py")
  
end
source ~/.config/gdb/gef.py
